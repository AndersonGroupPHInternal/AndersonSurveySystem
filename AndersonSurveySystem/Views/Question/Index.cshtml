
@{
    ViewBag.Title = "Index";
}

<h3>&nbsp; Questions</h3>
<div ng-controller="QuestionController as model" ng-init="model.List()">
    @*<a href="/Question/Index" type="button" class="btn btn-success"><i class="glyphicon glyphicon-plus-sign"></i> Add</a><br /><br />*@
    <div class="row">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#QuestionModal" ng-click="model.CreateModal(Question)" style="float: right; margin-right: 35px"><i class="glyphicon glyphicon-plus-sign"></i> Add</button>
    </div><br />
    <table class="table table-hover table-sm table-bordered ">
        <thead>
            <tr class="active">
                <th>QuestionId</th>
                <th>Description</th>
                <th style="width: 175px">Update</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="Question in model.Questions">
                <td><span ng-bind="Question.QuestionId"></span></td>
                <td><span ng-bind="Question.Description"></span></td>
                <td>
                    <button type="button" class="btn btn-info " data-toggle="modal" ng-click="model.UpdateModal(Question)" data-target="#QuestionModal"><i class="glyphicon glyphicon-edit"></i> Edit</button>
                    @*<a ng-href="{{'/Question/Update/' + Question.QuestionId}}" class="btn btn-primary"><i class="glyphicon glyphicon-edit"></i> Edit</a>*@
                    <a href="" ng-click="model.Delete(Question)" type="button" class="btn btn-danger"> <i class="glyphicon glyphicon-trash"></i> Delete</a>
                </td>
            </tr>
        </tbody>
    </table>
    <!-- Modal -->
    <div class="modal fade" id="QuestionModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Question</h4>

                </div>
                <div class="modal-body">
                   <div class="form-group">
                        <label for="Description">Description:</label><br />
                        <input type="text" id="Description" ng-model="model.Question.Description" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" ng-click="model.Update()" ng-show="model.Question.QuestionId > 0">Save changes</button>
                    <button type="button" class="btn btn-primary" ng-click="model.Create()" ng-show="model.Question.QuestionId == 0">Add</button>
                </div>
            </div>

        </div>
    </div>



</div>

